<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Violet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_alpha</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/georama_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="itemTextColor">?mainTextColor</item>
        <item name="android:navigationBarColor">@color/purple_700</item>
        <item name="mainBackground">@drawable/f</item>
        <item name="mainTextColor">@color/white</item>
        <item name="actionMenuTextColor">?mainTextColor</item>
    </style>

    <style name="Green" parent="Violet">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_200</item>
        <item name="colorPrimaryVariant">@color/light_500</item>
        <item name="colorOnPrimary">@color/green_alpha</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/light_700</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="mainBackground">@drawable/l</item>
        <item name="mainTextColor">@color/black</item>
    </style>


</resources>